{
  "name": "type-rest",
  "version": "1.0.0-alpha.9",
  "description": "A simple fetch wrapper made for TypeScript which allows you fully define an API.",
  "main": "dist/index.js",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "test": "npm run lint && jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts test/**/*.ts samples/**/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts test/**/*.ts samples/**/*.ts",
    "compile": "npm run clean && tsc",
    "clean": "rimraf dist/*"
  },
  "repository": "github:mrkmg/type-rest",
  "bugs": {
    "url": "https://github.com/mrkmg/type-rest/issues"
  },
  "author": "Kevin Gravier <kevin@mrkmg.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "jest": "^26.6.3",
    "jest-fetch-mock": "^1.7.5",
    "jest-tap-reporter": "^1.9.0",
    "rimraf": "^2.7.1",
    "ts-jest": "^26.5.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "merge-options": "^1.0.1"
  },
  "optionalDependencies": {
    "node-fetch": "^2.6.1"
  }
