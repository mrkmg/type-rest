{
  "compilerOptions": {
    "lib": ["es5", "dom", "ES2015"],
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "type-rest": [
        "src/type-rest.ts"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": ["src/**/*"]
}