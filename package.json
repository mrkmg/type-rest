{
  "name": "type-rest",
  "version": "1.1.0",
  "description": "A simple fetch wrapper made for TypeScript which allows you fully define an API.",
  "main": "dist/index.js",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "test": "npm run lint && jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts test/**/*.ts samples/**/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts test/**/*.ts samples/**/*.ts",
    "compile": "npm run clean && tsc",
    "clean": "rimraf dist/*"
  },
  "repository": "github:mrkmg/type-rest",
  "bugs": {
    "url": "https://github.com/mrkmg/type-rest/issues"
  },
  "author": "Kevin Gravier <kevin@mrkmg.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "eslint": "^7.29.0",
    "jest": "^27.0.6",
    "jest-fetch-mock": "^3.0.3",
    "jest-tap-reporter": "^1.9.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "merge-options": "^3.0.4"
  },
  "optionalDependencies": {
    "node-fetch": "^2.6.1"
  }
}
