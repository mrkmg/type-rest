{
  "compilerOptions": {
    "lib": ["es5", "dom", "es2015"],
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": false,
    "baseUrl": "./src"
  },
  "exclude": [
    "node_modules"
  ],
  "include": ["src/**/*"]
}